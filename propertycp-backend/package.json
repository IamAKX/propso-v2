{
  "name": "propertycp-backend",
  "version": "1.0.0",
  "description": "PropertyCP Backend API with Bun + Hono + SQLite",
  "type": "module",
  "scripts": {
    "dev": "cd $(dirname $(pwd)) && cd propertycp-backend && AWS_REGION=eu-north-1 bun --hot src/index.ts",
    "start": "bun run src/index.ts",
    "db:init": "bun run src/db/init.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/lib-storage": "^3.500.0",
    "@smithy/core": "^2.0.0",
    "@smithy/node-http-handler": "^3.0.0",
    "@smithy/protocol-http": "^4.0.0",
    "@smithy/types": "^3.0.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.5.0",
    "hono": "^3.12.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "bun-types": "latest"
  }
}
