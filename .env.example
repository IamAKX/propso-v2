# PropertyCP Environment Configuration
# Copy this file to .env and update the values

# Backend Configuration
BACKEND_PORT=3001
NODE_ENV=production

# Database Configuration
DATABASE_PATH=./database/propertycp.db

# Security - IMPORTANT: Change this in production!
JWT_SECRET=propertycp-secret-key-change-in-production-to-random-64-char-string

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api

# For AWS EC2 Deployment, use the public IP or domain:
# REACT_APP_API_URL=http://YOUR_EC2_PUBLIC_IP:3001/api
# or
# REACT_APP_API_URL=https://api.yourdomain.com/api
